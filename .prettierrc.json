{
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "jsxSingleQuote": false,
  "printWidth": 140,
  "proseWrap": "always",
  "quoteProps": "consistent",
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "useTabs": true,
  "overrides": [
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "semi": true
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 2,
        "useTabs": false
      }
    }
  ]
}
